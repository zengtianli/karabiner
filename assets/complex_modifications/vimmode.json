{
	"title": "Arc Browser Customization",
	"rules": [
		{
			"description": "Map Escape to hyper+Escape in Arc",
			"manipulators": [
				{
					"type": "basic",
					"conditions": [
						{
							"type": "frontmost_application_if",
							"bundle_identifiers": [
								"^company.thebrowser.Browser"
							]
						}
					],
					"from": {
						"key_code": "escape",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "escape",
							"modifiers": [
								"left_shift",
								"left_command",
								"left_control"
							]
						}
					]
				}
			]
